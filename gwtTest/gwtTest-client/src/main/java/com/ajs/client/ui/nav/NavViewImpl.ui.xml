<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
        >
    <ui:style>
        .border {
            border-top: solid #B5B5B0;
            border-right: solid #B5B5B0;
            border-bottom: solid #B5B5B0;
            border-left: solid #B5B5B0;
            border-image: none;
            border-width: 2px;
            border-left-width: 0.5px;
            border-top-width: 0.5px;
        }

        .shadow {
            box-shadow: 10px 10px 5px #888888;
            padding-right: 100px;
        }

        .bgGrey {
            background-color: #E4F2ED;
        }
    </ui:style>
    <g:FlowPanel height="465px" addStyleNames='{style.bgGrey} {style.shadow} {style.border}'>
        <g:Label ui:field="navLabel"/>
    </g:FlowPanel>
</ui:UiBinder>
