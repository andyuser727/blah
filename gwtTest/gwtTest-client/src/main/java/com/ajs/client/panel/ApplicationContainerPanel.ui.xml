<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .border {
            border-top: solid #dcdcdc;
            border-right: solid #dcdcdc;
            border-bottom: solid #dcdcdc;
            border-left: solid #dcdcdc;
            border-image: none;
            border-width: 2px;
        }

        .floatRight {
            float: right;
        }

        .paddingContent {
            padding-top: 15px;
            padding-left: 25px;
            padding-right: 25px;
            padding-bottom: 25px;
        }

        .paddingImage {

            padding-right: 25px;
            padding-top: 25px;
        }

        .paddingButton {
            padding-bottom: 60px;
            width: 1350px;
        }
        .bgblue {
            background: #6495ed
        }
        .bgwhite {
            background: #f5f5f5
        }
    </ui:style>
    <g:DockLayoutPanel unit='EM'>
        <g:north size='6.5'>
            <g:FlowPanel ui:field="headerPanel">
                <g:Image ui:field="companyLogo" />
                <g:FlowPanel addStyleNames='{style.floatRight} {style.paddingImage}'>
                    <g:Image ui:field="invoiceLogo" />
                </g:FlowPanel>
                <g:FlowPanel addStyleNames='{style.floatRight} {style.paddingImage}'>
                    <g:Image ui:field="orderLogo" />
                </g:FlowPanel>
                <g:FlowPanel addStyleNames='{style.floatRight} {style.paddingImage}'>
                    <g:Image ui:field="quoteLogo" />
                </g:FlowPanel>
                <g:FlowPanel addStyleNames='{style.floatRight} {style.paddingImage}'>
                    <g:Image ui:field="paymentLogo" />
                </g:FlowPanel>
            </g:FlowPanel>

        </g:north>

        <g:center>
            <g:DockLayoutPanel ui:field='mainDockPanel' unit='EM'>

                <!-- Main menu tree. -->
                <g:lineStart size='25'>
                    <g:ScrollPanel ui:field='mainNavPanel'>
                        <g:SimplePanel />
                    </g:ScrollPanel>
                </g:lineStart>


                 <g:center>
                    <g:FlowPanel>
                        <!--<ui:style>-->
                            <!--.container {-->
                                <!--width:200px;-->
                            <!--}-->
                            <!--.content {-->
                                <!--width:200px;-->
                                <!--margin: 0 auto;-->
                            <!--}-->
                        <!--</ui:style>-->
                        <g:SimplePanel ui:field="tabPanel" width="1000px"  />
                        <g:SimplePanel ui:field="contentWrapperPanel" height="755px"  />
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>

