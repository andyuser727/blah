<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>

        .border {
            border-top: solid #dcdcdc;
            border-right: solid #dcdcdc;
            border-bottom: solid #dcdcdc;
            border-left: solid #dcdcdc;
            border-image: none;
            border-width: 2px;
        }

        .shadow {
            box-shadow: 10px 10px 5px #888888;
            padding-right: 100px;
        }

        .margin {
            /*margin-right: 10px;*/
            /*margin-top: 30px;*/
        }

        .marginLeftPanel {
            /*margin-right: 10px;*/
            margin-top: 5px;
        }

        .bgGreen {
            background-color: lightgreen;
        }

        .bgGrey {
            background-color: lightgray;
        }
        .bgWhite {
            background-color: #ffffff;
        }

        .floatLeft {
            float: left;
            position: relative;
        }

        .floatRight {
            float: right;
            position: relative;
            verticle-align: top;
        }
        .paddingImage {

            padding-right: 25px;
            padding-left: 25px;
            padding-top: 25px;
            padding-bottom: 25px;
        }
    </ui:style>
    <g:FlowPanel addStyleNames='{style.floatLeft} {style.bgWhite}'>
        <g:FlowPanel ui:field="headerPanel" >
            <g:Image ui:field="companyLogo" height="100px"/>
            <g:FlowPanel addStyleNames='{style.floatRight} {style.paddingImage}'>
                <g:Image ui:field="invoiceLogo" />
            </g:FlowPanel>
            <g:FlowPanel addStyleNames='{style.floatRight} {style.paddingImage}'>
                <g:Image ui:field="orderLogo" />
            </g:FlowPanel>
            <g:FlowPanel addStyleNames='{style.floatRight} {style.paddingImage}'>
                <g:Image ui:field="quoteLogo" />
            </g:FlowPanel>
            <g:FlowPanel addStyleNames='{style.floatRight} {style.paddingImage}'>
                <g:Image ui:field="paymentLogo" />
            </g:FlowPanel>
        </g:FlowPanel>

        <g:FlowPanel addStyleNames='{style.floatLeft} {style.marginLeftPanel}'>
            <g:SimplePanel ui:field="mainNavPanel" addStyleNames='{style.floatLeft} {style.paddingImage} {style.bgGreen}'/>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames='{style.floatLeft} {style.margin}{style.bgGreen}'>
            <g:SimplePanel height="30px" addStyleNames='{style.bgGreen}'/>
            <g:SimplePanel ui:field="tabPanel" addStyleNames='{style.bgGreen}'/>
            <g:SimplePanel ui:field="contentWrapperPanel" addStyleNames='{style.bgGreen} {style.paddingImage}'/>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames='{style.floatLeft} {style.paddingImage} {style.bgGreen}'>
            <g:SimplePanel ui:field="rightPanel" addStyleNames='{style.bgGreen}'/>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>

